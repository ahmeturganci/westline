<script>
    function durum(sayi) {
       
        var li1 = document.getElementsByClassName("li1");
        var li2 = document.getElementsByClassName("li2");
        var li3 = document.getElementsByClassName("li3");
        if(sayi==1)
        {

            for (var i = 0; i < li1.length; i++) {
                li1[i].style.visibility = "visible";
            }
            for (var i = 0; i < li2.length; i++) {
                li2[i].style.visibility = "hidden";
            }
            for (var i = 0; i < li3.length; i++) {
                li3[i].style.visibility = "hidden";
            }

        }
        else if(sayi==2)
        {
            for (var i = 0; i < li1.length; i++) {
                li1[i].style.visibility = "hidden";
            }
            for (var i = 0; i < li2.length; i++) {
                li2[i].style.visibility = "visible";
            }
            for (var i = 0; i < li3.length; i++) {
                li3[i].style.visibility = "hidden";
            }


        }
        else if (sayi == 3) {
            for (var i = 0; i < li1.length; i++) {
                li1[i].style.visibility = "hidden";
            }
            for (var i = 0; i < li2.length; i++) {
                li2[i].style.visibility = "hidden";
            }
            for (var i = 0; i < li3.length; i++) {
                li3[i].style.visibility = "visible";
            }


        }
    }
</script>
