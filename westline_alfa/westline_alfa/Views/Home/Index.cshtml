    <script>
        function WatBildirimiGoster() {
            $.notify({
                message: '<center><b>Wat kaydınız alınmıştır.</b></center><p><center><b>Yöneticinin onayı beklenmektedir</b>.Yönetici onayladığında SMS ve Mail ile bilgilendirileceksiniz.</p></center>'
            }, {
                // settings
                type: 'success',
                animate: {
                    enter: 'animated bounceIn',
                    exit: 'animated bounceOut'
                },
                delay: 10000,
                placement: {
                    from: "bottom",
                    align: "right"
                },
            });
        }
        function RandevuBildirimiGoster() {
            $.notify({
