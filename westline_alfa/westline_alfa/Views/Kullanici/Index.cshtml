
@{
    Layout = null;
}
<!DOCTYPE html>
<html>
<head>
    <meta charset="utf-8">
    <meta http-equiv="X-UA-Compatible" content="IE=edge">
    <title>Westline | Kullanıcı Giriş</title>
    <meta content="width=device-width, initial-scale=1, maximum-scale=1, user-scalable=no" name="viewport">
    <link rel="stylesheet" href="~/Content/Admin/bootstrap/css/bootstrap.min.css">
    <link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/4.5.0/css/font-awesome.min.css">
    <link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/ionicons/2.0.1/css/ionicons.min.css">
    <link href="~/Content/Admin/dist/css/AdminLTE.css" rel="stylesheet" />
    <!-- HTML5 Shim and Respond.js IE8 support of HTML5 elements and media queries -->
    <!-- WARNING: Respond.js doesn't work if you view the page via file:// -->
    <!--[if lt IE 9]>
    <script src="https://oss.maxcdn.com/html5shiv/3.7.3/html5shiv.min.js"></script>
    <script src="https://oss.maxcdn.com/respond/1.4.2/respond.min.js"></script>
    <![endif]-->
</head>
<body class="hold-transition login-page">
    <div class="login-box">
        <div class="login-logo">
            <a href="http://www.westline.com.tr" target="_blan"k><b>WestLine</b> <br /> <i>Kullanıcı Giriş Paneli</i></a>
        </div>
        <div class="login-box-body">
            <form action="" method="post">
                <div class="form-group has-feedback">
                    <input type="email" class="form-control" placeholder="Kullanıcı Adı" id="KulAd">

                </div>
                <div class="form-group has-feedback">
                    <input type="password" class="form-control" placeholder="Parola" id="parola">
                </div>
                <div class="row">
                    <div class="col-xs-8">
                        <div class="checkbox">
                            <label>
                                <input type="checkbox"> Beni Hatırla
                            </label>
                        </div>
                    </div>
                    <div class="col-xs-4">
                        <button onclick="Giris();" type="button" class="btn btn-primary btn-block btn-flat">Giriş Yap</button>
                        <a href="/Kullanici/Kayit"><b>Kayıt Ol</b></a>
                    </div>
                </div>
            </form>
        </div>
    </div>
    <script src="~/Scripts/jquery-1.10.2.min.js"></script>
    @*<script src="https://code.jquery.com/jquery-3.1.1.min.js"></script>*@
    <script src="https://maxcdn.bootstrapcdn.com/bootstrap/3.3.7/js/bootstrap.min.js" crossorigin="anonymous"></script>
    <script src="~/Scripts/bootstrap.min.js"></script>
</body>
</html>
<script>

    function Giris()
    {
        var email = document.getElementById('KulAd').value;
        var sifre = document.getElementById('parola').value;
        if (email == "" || sifre == "")
        {
            alert('Email veya Parola boş gecilemez...');
        }
        else {
            $.post("../Kullanici/GirisYap", { kullaniciAdi: email, sifre: sifre }, function (data) {
                if(data.basari==1)
                {
                    window.location.href = "/#/Dashboard";
                }
                else
                {
                    window.location.href = "../Kullanici/index";
                }
            });
        }
    }
</script>

