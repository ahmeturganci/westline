<div class="panel panel-default">
    <div class="panel-heading">
        Kullanıcı Bilgileri
    </div>  
    <div class="panel-body">
        <a class="btn btn-default" href="/Pdf/Index/@Model.Id" target="_blank">Kullanıcı Bilgileri Görüntüle</a> 
    </div>
</div>

<div class="panel panel-default">
    <div class="panel-heading">
        WAT Sözleşmesi Yükle
    </div>    
    <div class="panel-body">
        @using (Html.BeginForm("UploadWat", "YonetimPanel", FormMethod.Post, new { enctype = "multipart/form-data" }))
        {
            <input type="hidden" name="id" value="@Model.Id" />
            <input type="file" name="FileUpload" />
            <input type="submit" name="Submit" id="Submit" value="Upload" />
        }
    </div>
</div>

<div class="panel panel-default">
    <div class="panel-heading">
        DS-2019 yükle
    </div>
    <div class="panel-body">
        @using (Html.BeginForm("UploadDs", "YonetimPanel", FormMethod.Post, new { enctype = "multipart/form-data" }))
        {
            <input type="hidden" name="id" value="@Model.Id" />
            <input type="file" name="FileUpload" />
