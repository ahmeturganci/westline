<script>
    function onay(kulId, btnId) {
        $.post('../../YonetimPanel/RandevuOnay', { kulid: kulId, btnid: btnId }, function (data) {
            location.href = "../YonetimPanel/OgrenciDetay/" + kulId;
        });
    }
</script>


