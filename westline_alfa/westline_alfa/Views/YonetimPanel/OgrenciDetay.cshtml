        }
    </div>
</div>

@{
    if (Model.KullaniciRandevus.Any())
    {
        <div class="panel panel-default">
            <div class="panel-heading">
                Öğrenci Randevu Onayla
            </div>
            <div class="panel-body">
                <table class="table table-striped">
                    <thead>
                        <tr>
                            <th>Randevu Tarihi</th>
                            <th>Onay</th>
                        </tr>
                    </thead>
                    <tbody>
                        @if (Model.KullaniciRandevus.Any(x => x.Onay == true))
                        {
                            <tr>
                                <td>@Model.KullaniciRandevus.FirstOrDefault(x=>x.Onay == true).Randevu.Tarih</td>
                                <td>Onaylandı</td>
                            </tr>
                        }
                        else
                        {
                            foreach (var item in Model.KullaniciRandevus)
                            {
                                    <tr>
                                        <td>@item.Randevu.Tarih</td>
                                        <td><input type="submit" name="submit" id="r2" class="btn btn-info" onclick="onay(@Model.Id,@item.RandevuId)" value="Onayla" /></td>
                                    </tr>
                            }
                            <tr>
                                <td>Bu iki tarihi de onaylama</td>
                                <td><input type="submit" name="submit" id="r3" class="btn btn-danger" onclick="onay(@Model.Id,0)" value="Tamam" /></td>
                            </tr>
                        }

                        
                    </tbody>
                </table>
            </div>
        </div>
    }
}

